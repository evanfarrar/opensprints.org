<h2>All Config Files<%= " from "+@user.group_name if @user %></h2>
<table>
  <tbody>
    <% @data_uploads.each do |data_upload| %>
      <tr>
        <td>
          <%= data_upload.updated_at.to_s(:long) %>
          <% unless @user %>
            <%= " from "+data_upload.user.group_name %>
          <% end %>
        </td>
        <td>
          <%= link_to("view",data_upload_path(data_upload))%>
        </td>
        <td>
          <%= link_to("download",data_upload.database.url)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user == @user %>
  <p>
    <%= link_to "Upload your data", new_data_upload_path(:user_id => @user.id) %>
  </p>
<% end %>
