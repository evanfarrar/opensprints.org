<%= error_messages_for :user %>

<% @body_id = 'signup' %>

<div id="new-customer">
  <h2><%= t("new_customer") %></h2>
  <% form_for(@user) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>
    <p><%= submit_tag t("create"), :class => 'button primary' %></p>
  <% end %>
  <%= t("or") %> <%= link_to t("login_as_existing"), login_path %>
</div>
